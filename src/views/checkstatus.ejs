        function saveLinha(){
            $val = $('#linha').val();
            json = {'linha': $val}
            $.ajax({
            
            url:"/api/checkstatus",
            type:"POST",
            data: json,
            success:function(res){
                console.log(res);
                dataTable = res;
                // console.log(dataTable);
                // Find a <table> element with id="myTable":
                var table = document.getElementById("tabela");

                // Create an empty <tr> element and add it to the 1st position of the table:
                var row = table.insertRow(1);

                // Insert new cells (<td> elements) at the 1st and 2nd position of the "new" <tr> element:
                var cell1 = row.insertCell(0);
                var cell2 = row.insertCell(1);
                var status = {Vazio: 0 , Medio: 0, Lotado: 0}
                var resultado;

                for (var i = 0; i < dataTable.rows.length; i++ ){
                    if (dataTable.rows[0].lotacao == "Lotado"){
                        status["Lotado"] += 1 ;
                    }
                    else if (dataTable.rows[0].lotacao == "Medio"){
                        status["Medio"] += 1 ;
                    }
                    else if (dataTable.rows[0].lotacao == "Vazio"){
                        status["Vazio"] += 1 ;
                    }
                }

                if (status["Lotado"] >= status["Medio"] & status["Lotado"] >= status["Vazio"]){
                    resultado = "Lotado";
                }

                else if (status["Medio"] > status["Lotado"] & status["Medio"] >= status["Vazio"]){
                    resultado = "Medio";
                }

                else if (status["Vazio"] > status["Lotado"] & status["Vazio"] > status["Medio"]){
                    resultado = "Vazio";
                }

                // Add some text to the new cells:
                cell1.innerHTML = dataTable.rows[0].linha;
                //cell2.innerHTML = resultado;
                cell2.innerHTML = resultado;
                // $('#tabela').html(res);
                return false;
            },
            error:function(xhr, status, error){
                
                console.log(xhr.responseText);
                var err = '';
                $.each(JSON.parse(xhr.responseText) , function(i, item) {
                    
                        err +='<li>'+item.msg+'</li>';
                });
                $(".err-area").html(err);    
                return false;
            }
            
            });
        }
